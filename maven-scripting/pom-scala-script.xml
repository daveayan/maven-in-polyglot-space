<?xml version="1.0"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
	<modelVersion>4.0.0</modelVersion>
	<groupId>com.quicksolutions.maven.example</groupId>
	<artifactId>maven-scripting</artifactId>
	<version>1.0-SNAPSHOT</version>
	<packaging>pom</packaging>
	<properties>
		<scala.version>2.8.1</scala.version>
	</properties>
	<build>
		<plugins>
			<plugin>
				<groupId>org.scala-tools</groupId>
				<artifactId>maven-scala-plugin</artifactId>
				<version>2.9.1</version>
				<executions>
					<execution>
						<id>execClean</id>
						<phase>clean</phase>
						<goals>
							<goal>script</goal>
						</goals>
						<configuration>
							<script>
								println("")
								println("")
			        			println ("Hello from SCALA - execution of clean")
								println("")
								println("")
			     			</script>
						</configuration>
					</execution>
					<execution>
						<id>execVerify</id>
						<phase>verify</phase>
						<goals>
							<goal>script</goal>
						</goals>
						<configuration>
							<script>
								println("")
								println("")
			        			println ("Hello from SCALA - execution of verify")
								println("")
								println("")
			     			</script>
						</configuration>
					</execution>
					<execution>
						<id>execLocalScript</id>
						<phase>verify</phase>
						<goals>
							<goal>script</goal>
						</goals>
						<configuration>
							<scriptFile>scripts/localscript.scala</scriptFile>
						</configuration>
					</execution>
					<execution>
						<id>execRemoteScript</id>
						<phase>verify</phase>
						<goals>
							<goal>script</goal>
						</goals>
						<configuration>
							<scriptFile>scripts/remotescript.scala</scriptFile>
						</configuration>
					</execution>
				</executions>
				<configuration>
					<scalaVersion>${scala.version}</scalaVersion>
					<jvmArgs>
						<arg>-Xmx512M</arg>
						<arg>-Xss2M</arg>
					</jvmArgs>
				</configuration>
			</plugin>
		</plugins>
	</build>
	<repositories>
		<repository>
			<id>scala-releases</id>
			<url>http://scala-tools.org/repo-releases/</url>
			<releases>
				<enabled>true</enabled>
			</releases>
			<snapshots>
				<enabled>false</enabled>
			</snapshots>
		</repository>
	</repositories>
	<pluginRepositories>
		<pluginRepository>
			<id>scala-snapshots</id>
			<url>http://scala-tools.org/repo-releases/</url>
			<releases>
				<enabled>true</enabled>
			</releases>
			<snapshots>
				<enabled>false</enabled>
			</snapshots>
		</pluginRepository>
	</pluginRepositories>
</project>
