<?xml version="1.0"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
	<modelVersion>4.0.0</modelVersion>
	<groupId>com.quicksolutions.maven.example</groupId>
	<artifactId>maven-scripting</artifactId>
	<version>1.0-SNAPSHOT</version>
	<packaging>pom</packaging>
	<build>
		<plugins>
			<plugin>
				<groupId>org.codehaus.groovy.maven</groupId>
				<artifactId>gmaven-plugin</artifactId>
				<configuration>
					<source>
            println '''
            	
            	Hello from SampleApplicationJar - Configuration

            	'''
          </source>
				</configuration>
				<executions>
					<execution>
						<id>execClean</id>
						<phase>clean</phase>
						<goals>
							<goal>execute</goal>
						</goals>
						<configuration>
							<source>
          	    				println '''
          	    
          	    				Hello from SampleApplicationJar - Execution of Clean
          	    	
          	    				'''
          	  				</source>
						</configuration>
					</execution>
					<execution>
						<id>execVerify</id>
						<phase>verify</phase>
						<goals>
							<goal>execute</goal>
						</goals>
						<configuration>
							<source>
          	    				println '''
          	    
          	    				Hello from SampleApplicationJar - Execution of Verify
          	    	
          	    				'''
          	  				</source>
						</configuration>
					</execution>
					<execution>
						<id>execLocalScript</id>
						<phase>verify</phase>
						<goals>
							<goal>execute</goal>
						</goals>
						<configuration>
							<source>scripts/localscript.groovy</source>
						</configuration>
					</execution>
					<execution>
						<id>execRemoteScript</id>
						<phase>verify</phase>
						<goals>
							<goal>execute</goal>
						</goals>
						<configuration>
							<source>scripts/remotescript.groovy</source>
						</configuration>
					</execution>
				</executions>
			</plugin>
		</plugins>
	</build>
</project>
